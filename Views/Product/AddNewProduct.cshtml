@model PartyProductAPI.Models.ProductModel
@{
    var isAlert = ViewBag.Success;
}

<div class="container">
    @if (isAlert == true)
    {
        <div class="alert alert-success alert-dismissible fade show my-3" role="alert">
            <strong>Congratulations!</strong> Your item has been added .
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <h2 class="my-3">Add New Product</h2>
    <form asp-action="AddNewProduct" asp-controller="Product" method="post" enctype="multipart/form-data">
        <div class="form-group my-2 mb-3">
            <label asp-for="ProductName" class="fw-semibold fs-5">Product Name</label>
            <input asp-for="ProductName" class="form-control" value="" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-start align-items-center gap-3">
            <button type="submit" class="btn btn-primary">Add Product</button>
            <a asp-action="GetAllProduct" asp-controller="Product" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>